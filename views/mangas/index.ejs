<% layout('/layouts/boilerplate') %>    
        <% for(let manga of mangas){ %> 
            <div class="card mb-3 text-white bg-dark">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=manga.images[0].url%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= manga.title %></h5>
                            <p class="card-text"><%=manga.description%> </p>
                            <p class="card-text">
                                <small class="text-muted"><%=manga.author%> </small>
                            </p>
                            <p class="card-text"><%=manga.genre%></p>
                            <a class="btn btn-primary" href="/mangas/<%=manga._id%> ">View <%=manga.title%> </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
    
